$ const isDevelopment = process.env.NODE_ENV === 'development';
$ const error = input.error || {};

<document>
  <cms-page-container class="container-fluid-max">
    <div class="row">
      <div class="col">
        <h2>${input.statusCode} ${input.statusMessage}</h2>
        <h3>${error.message}</h3>
        <if(isDevelopment)>
          <pre>${error.stack}</pre>
        </if>
      </div>
    </div>
  </cms-page-container>
</document>
