import { getAsArray } from "@base-cms/object-path";

$ const items = getAsArray(input, "items");
$ const homeTitle = input.homeTitle || "Home";

<default-theme-breadcrumbs>
  <@item>
    <marko-web-link href="/" title=homeTitle>${homeTitle}</marko-web-link>
  </@item>
  <for|item| of=items>
    <@item ...item />
  </for>
</default-theme-breadcrumbs>
